@model Buoi3.Models.Student

@{
    ViewData["Title"] = "Đăng ký chuyên ngành";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-primary">Đăng ký chuyên ngành</h2>

        <form asp-action="ShowKQ" method="post">
            <div class="mb-3">
                <label class="form-label">MSSV:</label>
                <input asp-for="MSSV" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Họ tên:</label>
                <input asp-for="HoTen" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Điểm TB:</label>
                <input asp-for="DiemTB" type="number" step="0.01" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Chuyên ngành:</label>
                <select asp-for="ChuyenNganh" class="form-select" required>
                    <option value="">-- Chọn chuyên ngành --</option>
                    <option value="CNPM">CNPM</option>
                    <option value="HTTT">HTTT</option>
                    <option value="ANM">ANM</option>
                    <option value="TTNT">TTNT</option>
                    <option value="MMT">MMT</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success">Đăng ký</button>
        </form>
    </div>
</div>
